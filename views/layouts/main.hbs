<!doctype html>
<html>
<head>
<meta charset="UTF-8">
	<link href='http://fonts.googleapis.com/css?family=Lobster|Slabo+27px' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="/vendor/bootstrap-3.3.2/css/bootstrap.css">
	<link rel="stylesheet" href="/css/styles.css">
{{{_sections.head}}}
{{#if showTests}}
	<link rel="stylesheet" href="/vendor/mocha.css">
{{/if}}
<title>{{{title}}}Meadowlark Travel</title>
</head>
<body>

<section class="container">
	<!-- 
	<header style="float: left; margin-bottom: 1em">
	<img src="/imgs/owl.jpg" alt="Meadowlark Travel Logo" class="img-responsive">
	</header> 
	-->
	<header class="row">
		<div class="col-sm-12">
			<div class="page-header">
			  <h1>Meadowlark Travel Agency <small>We love owls</small></h1>
			</div>
		</div>
	</header>

	<nav class="navbar">
		<ul class="nav nav-pills">
			<li><a href="/">Home <span class="sr-only">(current)</span></a></li>
			<li><a href="/about">About</a></li>
			<li><a href="/contact">Contact</a></li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Tours <span class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/tours/oregon-coast">Oregon Coast</a></li>
					<li><a href="/tours/hood-river">Hood River</a></li>
					<li class="divider"></li>
					<li><a href="/tours/request-group-rate">Request Group Rate</a></li>
				</ul>
			</li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Randoms <span class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/nursery-rhymes">Nursery Rhymes</a></li>
					<li><a href="/newsletter">Newsletter</a></li>
					<li><a href="/contest/vacation-photos">Vacation Photo Contest</a></li>
					<li><a href="/headers">Request Headers</a></li>
				</ul>
			</li>
		</ul>
	</nav>

	{{#if flash}}
		<div class="alert alert-dismissable alert-{{flash.type}}">
			<button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times</button>
			<strong>{{flash.intro}}</strong>
			{{{flash.message}}}
		</div>
	{{/if}}

</section><!-- /container -->

<section class="container">
{{{body}}}
</section><!-- /container -->

{{#if showTests}}
	<section class="container qa-test">
		<div class="row">
			<div class="col-sm-12">
				<div id="mocha"></div>
			</div>
		</div>
	</section>

	<script src="/vendor/mocha.js"></script>
	<script src="/vendor/chai.js"></script>
	<script>
		mocha.ui('tdd');
		var assert = chai.assert;
	</script>
	<script src="/qa/tests-global.js"></script>
	{{#if pageTestScript}}
		<script src="{{pageTestScript}}"></script>
	{{/if}}
	<script>mocha.run();</script>
{{/if}}

<section class="container">
	<footer>
		<div class="row">
			<div class="col-sm-12">
				<p>&copy; {{copyrightYear}} Meadowlark Travel</p>
			</div>
		</div>
	</footer>
</section>

<script src="//code.jquery.com/jquery-2.0.2.min.js"></script>
<script>window.jQuery || document.write('<script src="/vendor/jquery-1.11.2.js"><\/script>')</script>
<script src="/vendor/bootstrap-3.3.2/js/bootstrap.js"></script>
{{{_sections.jquery}}}

</body>
</html>
